{
  "name": "Chrome Infometer",
  "description": "Extension",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts" : [
  {
	  	"matches" : ["http://*/*","https://*/*"],
	  	"css": ["main.css"],	  	
	  	"js" : [
	  			"main.js",
	  			"init.js"
	  			]	  	
  	}
  ],
  "web_accessible_resources" : [
  	"prototype/marker.svg",
  	"prototype/marker.png",
  	"prototype/markerdashed.svg"
  ],
  "browser_action": {
    "default_title": "Chrome Infometer"
  },
  "manifest_version": 2
}
