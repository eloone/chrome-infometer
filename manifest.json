{
  "name": "Infometer",
  "description": "Infometer helps you measure how much you have read of an online content.",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "management",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts" : [
  {
	  	"matches" : ["http://*/*","https://*/*"],
	  	"css": ["client.css"],	  	
	  	"js" : [
	  			"client.js"
	  			],
      "run_at" : "document_start" 	
  	}
  ],
  "web_accessible_resources" : [
  	"images/marker.svg",
  	"images/markerdashed.svg"
  ],
  "browser_action": {
    "default_title": "Infometer"
  },
  "content_security_policy" : "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}
